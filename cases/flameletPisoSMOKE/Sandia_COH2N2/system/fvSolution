FoamFile
{
    version     2.2;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    rho
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-6;
        relTol          0.01;
    }

    p
    {
        solver                GAMG;
        tolerance             1e-10;
        relTol                0.05;
        smoother              GaussSeidel;
        cacheAgglomeration    off;
        nCellsInCoarsestLevel 20;
        agglomerator          faceAreaPair;
        mergeLevels           1;
    }

    U
    {
        solver          PBiCG;
	preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.01;
    }

    "(k|epsilon|H|Z|Zvar)"
    {
        solver          PBiCG;
	preconditioner  DILU;
        tolerance       1e-09;
        relTol          0.01;
    }


}

PISO
{
    nNonOrthogonalCorrectors 0;

    residualControl
    {
        p               1e-7;
        U               1e-7;
        H               1e-7;
	Z		1e-7;
	Zvar		1e-7;

        // possibly check turbulence fields
        "(k|epsilon|omega)" 1e-5;
    }
}

// ************************************************************************* //

