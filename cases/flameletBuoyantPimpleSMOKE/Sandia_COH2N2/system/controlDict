FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application       flameletBouyantPimpleSMOKE;

startFrom         latestTime;

startTime         0;

stopAt            noWriteNow;

endTime           1.00;

deltaT            1e-7;

writeControl      adjustableRunTime;

writeInterval     25e-3;

purgeWrite        0;

writeFormat       ascii;

writePrecision    9;

writeCompression  uncompressed;

timeFormat        general;

timePrecision     6;

runTimeModifiable yes;

adjustTimeStep    yes;

maxCo             0.5;

maxDeltaT         1e-4;

