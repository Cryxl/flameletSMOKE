FoamFile
{
    version     2.2;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-10;
        relTol          0.05;
        smoother        GaussSeidel;
        cacheAgglomeration off;
        nCellsInCoarsestLevel 20;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }

    U
    {
        solver          PBiCG;
	preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.1;
	minIter		1;
    }

    "(k|epsilon|H|Z|Zvar)"
    {
        $U;
        tolerance       1e-09;
        relTol          0.1;
	minIter		1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    rhoMin          rhoMin [ 1 -3 0 0 0 ] 0.02;
    rhoMax          rhoMax [ 1 -3 0 0 0 ] 3.00;

    pMin	    pMin   [1 -1 -2 0 0 0 0] 1e4;

    residualControl
    {
        p               1e-16;
        U               1e-16;
        H               1e-16;

        // possibly check turbulence fields
        "(k|epsilon|omega)" 1e-16;
    }
}

relaxationFactors
{
    fields
    {
        p               0.1;
        rho             0.1;
    }
    equations
    {
        U               0.3;
        "(k|epsilon)"   0.3;
	Z		0.3;
	Zvar		0.3;
	H		0.3;

	default         0.3;
    }
}


