FoamFile
{
    version     2.2;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [ 0 0 0 1 0 0 0 ];

internalField   uniform 290;

boundaryField
{
    inletfuel           
    {
        type  		fixedValue;
 	value 		uniform 292;
    }

    inletair           
    {
        type  		fixedValue;
 	value 		$internalField;
    }

    outlet          
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    sidewall       
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    burnerwall
    {
        type  		zeroGradient;
    }
    front
    {
        type            wedge;
    }
    back
    {
        type            wedge;
    }
    axis
    {
        type            empty;
    }
}


